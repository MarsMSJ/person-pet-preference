<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
        <h2>I'm guessing you're a:</h2>
        <h2><%= @ppe.pet_kind %> Person</h2>
        <br><br>
    </div>
</div>

</div>

<div class="row">
    <div class="col-md-2 col-md-offset-4">      
        <%= link_to "Correct!", {
            :controller => "person_pet_experiment", 
            :action => "guessvalidation", 
            :id => @ppe.id,
            :pass => true },
            :class => "btn btn-info btn-circle btn-lg btn-block"%>
    </div>
    <div class="col-md-2">
        <%= link_to "Wrong...", {
            :controller => "person_pet_experiment", 
            :action => "guessvalidation", 
            :id => @ppe.id,
            :pass => false },
            :class=> "btn btn-warning btn-circle btn-lg btn-block"%>
    </div>  
</div>

