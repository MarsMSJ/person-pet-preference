<% provide(:title, 'Data Entry') %>
<div class="row text-center">
<h2>We need some data first...</h2>
</div>
<%= form_with scope: :data, local: true do |form| %>
    <div class="row">
    </div>
    <div class="row">
            <div class="text-center" >
            <h3>Select Units</h3><br>
            </div>
        <div class="text-center">
           <select name = "post[units]">
                <option value = "1">US Inches/Feet</option>
                <option value = "2">UK Meters/Killograms</option>
            </select>
            
        </div>   
        <div class="col-md-2 col-md-offset-4 text-center">    
             
            <h3><%= form.label :height %></h3>
            
            <%= form.number_field(:height, step: :any) %>
        </div>
        
        <div class="col-md-2 text-center">
            <h3><%= form.label :weight %></h3>
            
            <%= form.number_field(:weight, step: :any) %>
        </div>
    </div>

<% end %>
 

